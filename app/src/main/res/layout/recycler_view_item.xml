<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="90dp"
            android:layout_height="125dp"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Smoked salmon and avocado sushi "
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/imageView1"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text=" Fancy making sushi at home?This
             \n simple recipe makes 32 healthy little
             \n bites, ideal for lunch or served as
             \n canapÃ©s"
            android:textStyle="italic"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/textView1"
            android:layout_toEndOf="@id/imageView1"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonSushi"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:layout_below="@+id/textView2"
            android:onClick="buttonforSushi"
            android:text="more detalis"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="125dp"
            android:src="@drawable/salmon_and_cucumber"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Salmon and cucumber sushi rolls "
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/imageView2"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Follow our simple step-by-step guide
                          \n to rolling your own, low-fat and
                          \n healthy Japanese sushi"
            android:textStyle="italic"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/textView3"
            android:layout_toEndOf="@id/imageView2"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonSushi2"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:layout_below="@+id/textView4"
            android:onClick="buttonforSushi2"
            android:text="more detalis"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>








